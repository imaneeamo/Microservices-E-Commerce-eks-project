pipeline {
    agent any

    environment {
        GIT_REPO_NAME = "Microservices-E-Commerce-eks-project"
        GIT_EMAIL     = "imaneamokrane3@gmail.com"
        GIT_USER_NAME = "norelimane"
        IMAGE_NAME    = "emailservice"
        REPO_URL      = "730335625185.dkr.ecr.us-east-1.amazonaws.com/emailservice"
        YAML_FILE     = "emailservice.yaml"
    }

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                git branch: 'master', url: 'https://github.com/imaneeamo/Microservices-E-Commerce-eks-project.git'
            }
        }
        stage("Docker Image Build") {
            steps {
                script {
                    dir('src/emailservice') {
                        sh 'docker system prune -f'
                        sh 'docker container prune -f'
                        sh 'docker build -t emailservice .'
                    }
                }
            }
        }
        stage("ECR Image Pushing") {
            steps {
                script {
                    sh '''
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 730335625185.dkr.ecr.us-east-1.amazonaws.com
                    docker tag emailservice:latest 730335625185.dkr.ecr.us-east-1.amazonaws.com/emailservice:${BUILD_NUMBER}
                    docker push 730335625185.dkr.ecr.us-east-1.amazonaws.com/emailservice:${BUILD_NUMBER}
                    '''
                }
            }
        }
        stage('Update Deployment file') {
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'git_token')]) {
                        sh '''
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER_NAME}"
                            BUILD_NUMBER=${BUILD_NUMBER}
                            echo $BUILD_NUMBER

                            sed -i "s#image:.*#image: ${REPO_URL}:$BUILD_NUMBER#g" ${YAML_FILE}
                            git add .
                            git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}"
                            git push https://${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:master
                        '''
                    }
                }
            }
        }
    }
}
